<h3>Korean Baseball Organization Wiki</h3>
	<div id="nav">
		<a href="/authors">Authors</a> |
		<a href="/documents">Documents</a>
	</div><br>

<form action="/documents/search" method="post">
	<label for="title">Search by Title (Case Sensitive)<br>
		<input type="text" name="title">
	</label><br>

	<input type="submit" name="submit">
</form><br>

<hr>

<h3>Latest Activity</h3>

<h4>Authors</h4>
<% @authors.each do |author| %>
	<% if author.created_at == author.updated_at %>
		<a href="/authors/<%= author.id %>"><%= author.username %> joined KBO Wiki</a><br>
	<% else %>
		<a href="/authors/<%= author.id %>"><%= author.username %> changed their info</a><br>
	<% end %>
<% end %>

<h4>New Documents</h4>
<% @documents.each do |document| %>
	<a href="/documents/<%= document.id %>"><%= document.title %> was created</a><br>
<% end %>

<h4>Edits</h4>
<% @versions.each do |version| %>
	<a href="/versions/<%= version.id %>"><%= version.document.title %> was edited</a><br>
<% end %>

<h4>Comments</h4>
<% @comments.each do |comment| %>
	<a href="/comments/<%= comment.document_id %>"><%= @authors.find(comment.author_id).whole_name %> commented on <%= @documents.find(comment.document_id).title %></a><br>
<% end %>
